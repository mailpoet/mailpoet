# disable directory listing
Options -Indexes

# disable file serving (Apache 2.4)
<IfModule mod_authz_core.c>
  Require all denied
</IfModule>

# disable file serving (Apache 2.2)
<IfModule !mod_authz_core.c>
  <IfModule mod_authz_host.c>
    Order deny,allow
    Deny from all
  </IfModule>
</IfModule>
