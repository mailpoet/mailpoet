{
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/mailpoet/html2text"
    }
  ],
  "require": {
    "php": ">=7.4",
    "cerdic/css-tidy": "2.1.0",
    "doctrine/common": "3.2.2",
    "doctrine/dbal": "2.13.8",
    "doctrine/orm": "2.11.2",
    "gregwar/captcha": "1.2.1",
    "monolog/monolog": "2.9.3",
    "nesbot/carbon": "2.72.5",
    "pelago/emogrifier": "7.2.0",
    "psr/cache": "^1.0",
    "sabberworm/php-css-parser": "8.5.1",
    "soundasleep/html2text": "dev-master",
    "symfony/dependency-injection": "5.4.7",
    "symfony/polyfill-ctype": "1.18.1",
    "symfony/polyfill-iconv": "1.18.1",
    "symfony/polyfill-intl-idn": "1.18.1",
    "symfony/polyfill-intl-normalizer": "1.18.1",
    "symfony/polyfill-mbstring": "1.18.1",
    "symfony/polyfill-php72": "1.23.0",
    "symfony/polyfill-php80": "1.23.1",
    "symfony/validator": "5.4.7",
    "twig/twig": "3.10.3"
  },
  "scripts": {
    "post-update-cmd": "@process",
    "post-install-cmd": "@process",
    "process": [
      "rm -rf ../vendor-prefixed",
      "mkdir ../vendor-prefixed",
      "php -d memory_limit=2G ../tools/vendor/php-scoper.phar add-prefix --force",
      "mv ./build/* ../vendor-prefixed",
      "php fix-carbon.php",
      "php fix-twig.php",
      "php fix-doctrine.php",
      "php fix-validator.php",
      "php fix-monolog.php",
      "php fix-symfony-di.php",
      "php fix-symfony-polyfill.php",
      "php fix-attributes.php",
      "php fix-captcha.php"
    ]
  },
  "config": {
    "platform": {
      "php": "7.4"
    },
    "sort-packages": true
  },
  "require-dev": {
    "doctrine/annotations": "^1.13"
  }
}
