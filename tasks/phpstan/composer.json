{
    "require": {
        "php-stubs/woocommerce-stubs": "^5.8",
        "phpstan/phpstan": "1.2.0",
        "phpstan/phpstan-doctrine": "1.0.2",
        "phpstan/phpstan-phpunit": "1.0.0",
        "szepeviktor/phpstan-wordpress": "1.0.2"
    },
    "autoload": {
        "psr-4": {
            "MailPoet\\PHPStan\\Extensions\\": "extensions"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "php prefix-phpstan-doctrine.php",
            "@fixWPStubsForPHP81"

        ],
        "post-update-cmd": [
            "php prefix-phpstan-doctrine.php",
            "@fixWPStubsForPHP81"
        ],
        "fixWPStubsForPHP81": "sed -i -e 's#function readonly#function __readonly#' vendor/php-stubs/wordpress-stubs/wordpress-stubs.php"
    }
}
